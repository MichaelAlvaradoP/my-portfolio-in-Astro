---
import { Icon } from "astro-icon";
import AscentPhoto from "../assets/Ascent.png"
---

<section id="projects" class="min-h-screen">
  <h2 class="pt-20 md:pt-32 text-7xl text-white text-center mb-16 md:mb-28">
    Proyectos
  </h2>
  <!-- Grid proyectos -->
  <!-- flex flex-col md:flex-row flex-wrap -->
  <div
    class="grid grid-cols-1 md:grid-cols-3 w-full gap-4"
  >
    <!-- Proyecto -->
    <div class="relative">
      <div>
        <div
          class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
        >
          <a href="#">
            <img
              class="rounded-t-lg"
              src={AscentPhoto}
              alt="Ascent Project"
            />
          </a>
          <div class="p-5">
            <a href="#">
              <h5
                class="mb-5 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
              >
                Ascent
              </h5>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
              Landing page del proyecto "Ascent", creado con Astro y componentes de React estilizados con TailwindCSS.
            </p>
            
            <div class="mt-16">
              <a
                class="w-12 text-slate-700 transition duration-200 hover:scale-105 absolute bottom-3 right-5"
                href="https://www.ascent.cl/"
                target="_blank"
              >
                <Icon name="mdi:web" />
              </a>
              <!-- <a
                class="w-12 text-slate-700 transition duration-200 hover:scale-105 absolute bottom-0 right-2 pt-2"
                href=""
                target="_blank"
              >
                <Icon name="mdi:github" /> -->
              <!-- </a> -->
            </div>
          </div>
        </div>

      </div>
    </div>
    
  </div>
</section>
