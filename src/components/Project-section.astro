---
import proyectos from './proyectos.json';

type Proyecto = {
  titulo: string;
  descripcion: string;
  colorFondo: string;
  colorHover: string;
};
---
<section id='projects' class="min-h-screen">
  <h2 class="pt-20 md:pt-32 text-7xl text-white text-center mb-16 md:mb-28 gap-5">Proyectos</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 w-full text-3xl text-center gap-4">
    <!-- Iteración a través de los proyectos -->
    {proyectos.map((proyecto: Proyecto, index: number) => (
      <div :key={index} class="relative">
        <div class={`${proyecto.colorHover} transition-opacity duration-300 ease-in p-4 absolute top-0 left-0 w-full h-full flex items-center justify-center`}>
          {proyecto.descripcion}
        </div>
        <div class={`${proyecto.colorFondo} transition-colors duration-300 ease-in p-24 top-0 left-0 w-full h-full flex items-center justify-center`}>
          {proyecto.titulo}
        </div>
      </div>
    ))}
  </div>
</section>
