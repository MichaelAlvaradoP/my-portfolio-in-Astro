<section class="container mx-auto w-2/3 lg:w-1/3 min-h-screen" id="contact">
  <h2 class="text-center text-7xl text-white mt-32 mb-10">Contacto</h2>
  <p class="text-center text-xl text-sky-500">¿Interesado en trabajar conmigo?</p>
  <div class="my-5">
      <div class="p-5 space-y-5 shadow-xl">
    
        <form action="https://formsubmit.co/e8da8a9ca0a73cd0d009c316414ffa94" method="POST" >
          <div class="grid grid-cols-2 gap-5">
            <!-- Honeypot -->
            <!-- <input type="text" name="_honey" style="display:none"> -->

            <!-- Disable Captcha -->
            <input type="hidden" name="_captcha" value="true">
            <!-- Thanks -->
            <input type="hidden" name="_next" value="https://michaelalvarado.dev/thanks">
            <!-- fixing thanks .dev -->
            <!-- Form -->
            <input
              type="text"
              name="Nombre"
              class=" bg-sky-900 placeholder-sky-200 text-sky-100 px-4 py-2 focus:outline-none focus:sky-purple-500 col-span-2"
              placeholder="Nombre"
              required
            />
            <input
              type="email"
              name="Email"
              class="bg-sky-900 placeholder-sky-200 text-sky-100 px-4 py-2 focus:outline-none focus:border-sky-500 col-span-2"
              placeholder="Email"
              required
            />
            <textarea
              name="Mensaje"
              cols="10"
              rows="5"
              class="bg-sky-900 placeholder-sky-200 text-sky-100 px-4 py-2 focus:outline-none focus:sky-purple-500 col-span-2"
              placeholder="Escriba su mensaje..."
              required
            ></textarea>
          </div>
          <div class="flex justify-left md:justify-end">
            <button type="submit" class="focus:outline-none mt-5 bg-sky-500 hover:bg-sky-400 px-4 py-2 rounded-lg text-white text-lg shadow-xl transition duration-200 hover:scale-105">¡Enviar!</button>
          </div>
        </form>
      </div>
    </div>
</section>